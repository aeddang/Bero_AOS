<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bottom"
    android:background="@color/brand_bg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_light"
        android:background="@color/app_grey100"
        android:alpha="0.4"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.skeleton.component.button.ImageTextButton
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:defaultImage="@drawable/ic_walk"
            android:title="@string/gnbWalk"
        />
        <com.skeleton.component.button.ImageTextButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:activeImage="@drawable/ic_favorite_on"
            android:title="@string/gnbMatching"
            />
        <com.skeleton.component.button.ImageTextButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:defaultImage="@drawable/ic_calendar"
            android:title="@string/gnbDiary"
            />
        <com.skeleton.component.button.ImageTextButton
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:defaultImage="@drawable/ic_profile_user_default"
            android:title="@string/gnbMy"
            />
    </LinearLayout>
</LinearLayout>