<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/margin_light"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="@dimen/icon_thin"
            android:layout_height="@dimen/icon_thin"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_thin"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/fontSemiBold"
            android:textSize="@dimen/font_regular"
            tools:text="@string/confirm"
            android:textColor="@color/app_black"
            android:textAlignment="center"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ef_ripple_rt_blank"/>
</FrameLayout>